<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write Data"
            android:textSize="50sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to External Storage"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"/>
        <EditText
            android:id="@+id/etNamaFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Masukan file"/>
        <EditText
            android:id="@+id/etIsiFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Isi File"/>

        <Button
            android:onClick="buat_file"
            android:id="@+id/btnBuatFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:text="Buat File"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="30sp"
            />

    </LinearLayout>



    <Button
        android:onClick="baca_data"
        android:id="@+id/btnBacaData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Baca Data"
        android:textAllCaps="false"
        android:textSize="30sp"
        />


</LinearLayout>